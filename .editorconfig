# top-most EditorConfig file
root = true

# Unix-style newlines
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.cs]
charset = utf-8

# Indentation
[*.cs]
indent_style = space
indent_size = 4

# Trim excess whitespace before newline
trim_trailing_whitespace = true

# Setting max line length to 100, we can alter if necessary
max_line_length = 100
